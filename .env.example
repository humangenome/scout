# Scout Configuration
# Copy to .env and fill in your values

# OpenAI API key (for Whisper STT and TTS)
OPENAI_API_KEY=sk-...

# Server port
PORT=3333

# Home Assistant (for ambient data — optional)
HA_URL=http://192.168.229.199:8123
HA_TOKEN=your_long_lived_access_token

# Claude Code binary (default: claude)
CLAUDE_CMD=claude
CLAUDE_ARGS=--dangerously-skip-permissions

# Project directory Claude Code works in
PROJECT_DIR=/home/ryanpennington/projects/scout

# TTS voice (openai voices: alloy, echo, fable, onyx, nova, shimmer)
TTS_VOICE=nova
TTS_MODEL=tts-1

# Whisper model
STT_MODEL=whisper-1

# Session timeout (minutes) — idle longer than this starts a new session
SESSION_TIMEOUT=15
