# Scout Configuration
# Copy to .env and fill in your values

# OpenAI API key (for Whisper STT and TTS)
OPENAI_API_KEY=sk-...

# Server port
PORT=3333

# Auth token for client connections (generate with: openssl rand -hex 32)
SCOUT_TOKEN=your_auth_token_here

# Allowed origins (comma-separated). Default: http://localhost:3333
ALLOWED_ORIGINS=https://your-scout-host.example.com

# Home Assistant (for ambient data — optional)
HA_URL=http://your-ha-instance:8123
HA_TOKEN=your_long_lived_access_token

# Claude Code binary (default: claude)
CLAUDE_CMD=claude
# Claude flags (default: none — safe mode)
# Uncomment to enable dangerous mode (opt-in only):
# CLAUDE_ARGS=--dangerously-skip-permissions

# Project directory Claude Code works in
PROJECT_DIR=

# TTS voice (openai voices: alloy, echo, fable, onyx, nova, shimmer)
TTS_VOICE=nova
TTS_MODEL=tts-1

# Whisper model
STT_MODEL=whisper-1

# Session timeout (minutes) — idle longer than this starts a new session
SESSION_TIMEOUT=15

# Audio budget (max STT+TTS minutes per day, 0 = unlimited)
AUDIO_BUDGET_MINUTES=60

# Cost kill-switch (max monthly spend on voice APIs in dollars, 0 = unlimited)
MAX_MONTHLY_SPEND=0
